{
  "name": "mern-chat-server",
  "version": "1.0.0",
  "description": "Server for MERN stack real-time chat app",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:unit": "jest --coverage --testPathPattern=unit",
    "test:integration": "jest --coverage --testPathPattern=tests",
    "test:e2e": "cypress run",
    "setup-test-db": "node scripts/setupTestDB.js"
  },
  "keywords": [],
  "author": "Celestine",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongoose": "^7.5.2",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.6",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^8.12.1",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.4",
    "cypress": "^12.17.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "coverageDirectory": "<rootDir>/coverage/",
    "collectCoverage": true
  }
}
